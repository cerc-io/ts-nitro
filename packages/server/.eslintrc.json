{
  "extends": [
    "semistandard",
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["test-e2e/**/*.test.ts", "hardhat.config.ts", "test-e2e/scripts/*.ts"]
      }
    ],
    "max-len": [
      "error",
      {
        "code": 150
      }
    ],
    "import/prefer-default-export": "off"
  }
}
